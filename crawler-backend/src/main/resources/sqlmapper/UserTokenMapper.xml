<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.crawler.dao.UserTokenMapper" >

    <insert id="tokenAdd" parameterType="com.crawler.domain.SysUserToken">
        INSERT INTO sys_user_token
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test='userId != 0 '>
                user_id,
            </if>
            <if test='token != null and token != "" '>
                token,
            </if>
            <if test='ip != null and ip != "" '>
                ip,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test='userId != 0 '>
                #{userId, jdbcType=INTEGER},
            </if>
            <if test='token != null and token != "" '>
                #{token, jdbcType=VARCHAR},
            </if>
            <if test='ip != null and ip != "" '>
                #{ip, jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <delete id="deleteByToken" parameterType="java.lang.String">
        DELETE FROM sys_user_token
        WHERE token = #{token, jdbcType=VARCHAR}
    </delete>

    <select id="getByToken" resultType="com.crawler.domain.SysUserToken" parameterType="java.lang.String">
        SELECT
        user_id AS userId,
        token   AS token,
        ip      AS ip
        FROM sys_user_token
        WHERE token = #{token, jdbcType=VARCHAR}
    </select>

</mapper>